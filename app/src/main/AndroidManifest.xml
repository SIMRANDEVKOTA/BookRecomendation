<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookRecommendation">

        <!-- This is now the starting Activity of your app -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BookRecommendation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.RegisterActivity"
            android:exported="false"
            android:label="Register"
            android:theme="@style/Theme.BookRecommendation"/>

        <!-- ADDED FORGOT PASSWORD ACTIVITY HERE -->
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false"
            android:label="Forgot Password"
            android:theme="@style/Theme.BookRecommendation"/>

        <activity
            android:name=".view.DashboardActivity"
            android:exported="true"
            android:label="Dashboard"
            android:theme="@style/Theme.BookRecommendation"/>

        <!-- This activity seems unused, but keeping it for now -->
        <activity
            android:name=".view.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BookRecommendation"/>

    </application>

</manifest>
